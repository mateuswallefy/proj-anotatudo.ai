modules = ["nodejs-20", "web"]

hidden = [".git", "node_modules", "dist", ".config"]

[nix]
channel = "stable-24_05"
packages = ["nodejs-20", "pnpm", "lsof"]

[env]
PORT = "5000"

# ----- DEV (Run / Preview) -----
run = ["npm", "run", "dev"]

# ----- PRODUÇÃO (Deployment) -----
[deployment]
deploymentTarget = "autoscale"
build = ["npm", "install"]
start = "npm run start:production"

[[ports]]
localPort = 5000
externalPort = 80
